<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rating %><br>

  
  <fieldset class="rating">
    
    <input type="radio" id="star5" name="review[rating]" value=5 /><label class = "full" for="star5" title="- 5 stars"></label>
   
    <input type="radio" id="star4" name="review[rating]" value=4 /><label class = "full" for="star4" title="- 4 stars"></label>
 
    <input type="radio" id="star3" name="review[rating]" value=3 /><label class = "full" for="star3" title="- 3 stars"></label>
   
    <input type="radio" id="star2" name="review[rating]" value=2 /><label class = "full" for="star2" title="- 2 stars"></label>
 
    <input type="radio" id="star1" name="review[rating]" value=1 /><label class = "full" for="star1" title="- 1 star"></label>
    
  </fieldset>
  </div>

  <br>
  <br>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, rows: 20 %>
  </div>
  <div class="field">
    <!-- @current_user -->
    <%= f.label :user_id %><br>
    <%= f.select(:user_id, options_for_select([[current_user.first_name+" "+ current_user.last_name, current_user.id]])) %>
  </div>
  <div class="field">
    <%= f.label :roast_id %><br>
    <%= f.collection_select(:roast_id, Roast.all, :id, :coffee_name) %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Review", class: "button" %>
  </div>
<% end %>

