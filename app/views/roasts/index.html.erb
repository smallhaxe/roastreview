<p id="notice"><%= notice %></p>

<h1>Listing Roasts</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Type</th>
      <th>Coffee name</th>
      <th>Roaster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roasts.each do |roast| %>
      <tr>
        <td><%= roast.color %></td>
        <td><%= roast.type %></td>
        <td><%= roast.coffee_name %></td>
        <td><%= roast.roaster %></td>
        <td><%= link_to 'Show', roast %></td>
        <td><%= link_to 'Edit', edit_roast_path(roast) %></td>
        <td><%= link_to 'Destroy', roast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

