<p id="notice"><%= notice %></p>

<div id="map" class="small-10 large-centered columns" style="width: 80%"></div>

<div class="small-10 large-centered columns">

<h1>List of Cafes</h1>

<div class="small-2 columns">
  <% @cafes.each do |cafe| %>
    <tr>
      <td><%= cafe.name %></td>
      <td><%= cafe.address %></td>
      <td><%= cafe.roaster %></td>
    </tr>
  <% end %>
</div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th style="display: none">Lat</th>
        <th style="display: none">Lng</th>
        <th>Roaster</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cafes.each do |cafe| %>
        <tr>
          <td><%= cafe.name %></td>
          <td><%= cafe.address %></td>
          <td style="display: none"><%= cafe.latitude %></td>
          <td style="display: none"><%= cafe.longitude %></td>
          <td><%= cafe.roaster %></td>
          <td><%= link_to 'Show', cafe %></td>
          <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
          <td><%= link_to 'Destroy', cafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="small-10 large-centered columns">
  <%= link_to 'New Cafe', new_cafe_path %>
</div>
